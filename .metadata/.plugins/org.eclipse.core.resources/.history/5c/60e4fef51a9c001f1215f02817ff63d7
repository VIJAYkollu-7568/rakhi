package StudentForm;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.io.PrintWriter;
import java.rmi.ServerException;

import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/vijay")
public class vijay extends HttpServlet{


private static final long serialVersionUID = 1L;
public void doGet(HttpServletRequest request, HttpServletResponse response) throws IOException
{
response.setContentType("text/html");
PrintWriter out = response.getWriter(); // explicit object

out.println("<b>Form Handling Using Get Method</b><br>");

String sid = request.getParameter("id");
String sname = request.getParameter("name");
String sgender = request.getParameter("gender");

out.println("Student ID: " + sid + "<br>");
out.println("Student Name: " + sname + "<br>");
out.println("Student Gender: " + sgender + "<br>");
}
}